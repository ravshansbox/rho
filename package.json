{
  "name": "@rhobot-dev/rho",
  "version": "0.1.5",
  "type": "module",
  "description": "AI agent with persistent memory, heartbeat check-ins, and a knowledge vault",
  "bin": {
    "rho": "cli/rho.mjs"
  },
  "keywords": [
    "pi-package",
    "pi-extension",
    "pi-skill",
    "ai-agent",
    "memory",
    "heartbeat",
    "knowledge-vault"
  ],
  "homepage": "https://rhobot.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikeyobrien/rho.git"
  },
  "license": "MIT",
  "pi": {
    "extensions": [
      "./extensions"
    ],
    "skills": [
      "./skills"
    ],
    "image": "https://raw.githubusercontent.com/mikeyobrien/rho/main/docs/logo.png"
  },
  "peerDependencies": {
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*",
    "@sinclair/typebox": "*"
  },
  "devDependencies": {
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*",
    "@sinclair/typebox": "*"
  },
  "scripts": {
    "build": "printf '%s\n' 'no build step'",
    "lint": "printf '%s\n' 'no lint step'",
    "typecheck": "printf '%s\n' 'no typecheck step'",
    "test": "for f in tests/test-*.ts; do if [ \"$f\" = \"tests/test-vault.ts\" ]; then continue; fi; npx -y tsx \"$f\" || exit 1; done",
    "telegram:smoke": "npx -y tsx scripts/telegram-smoke.ts"
  },
  "dependencies": {
    "@grammyjs/auto-retry": "^2.0.2",
    "@hono/node-server": "^1.13.1",
    "@hono/node-ws": "^1.0.7",
    "grammy": "^1.40.0",
    "hono": "^4.6.16",
    "smol-toml": "^1.6.0",
    "tsx": "^4.21.0"
  }
}
